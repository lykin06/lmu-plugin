<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="LMU">
            <command
                  commandId="fr.unice.polytech.lmu_plugin.SMtoNuSMV.command"
                  label="Export"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                              <!--<test property="org.eclipse.core.resources.contentTypeId" value="org.eclipse.jdt.core.javaSource"/>-->
                              <test
                                    property="org.eclipse.core.resources.extension"
                                    value="jar">
                              </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="fr.unice.polytech.lmu_plugin.SMToNuSMVHandler"
            id="fr.unice.polytech.lmu_plugin.SMtoNuSMV.command"
            name="SMtoNuSMV">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.unice.polytech.lmu_plugin.SMToNuSMVHandler"
            commandId="fr.unice.polytech.lmu_plugin.SMtoNuSMV.command">
      </handler>
   </extension>

</plugin>
